{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["src/**", "build/**", "*.wasm"],
      "cache": true
    },
    "generate": {
      "dependsOn": ["^build"],
      "outputs": ["src-generated/**"],
      "cache": true
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test:ci": {
      "dependsOn": ["build"],
      "cache": false
    },
    "check:types": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "check": {
      "dependsOn": ["check:types", "test:ci"],
      "outputs": [],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
