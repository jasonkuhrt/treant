{
  "name": "@treant/graphql-grammar",
  "version": "0.0.0",
  "description": "Tree-sitter grammar for GraphQL",
  "type": "module",
  "author": "Jason Kuhrt",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasonkuhrt/treant.git",
    "directory": "packages/graphql-grammar"
  },
  "treant": {
    "displayName": "GraphQL"
  },
  "files": [
    "src",
    "grammar.wasm",
    "queries"
  ],
  "exports": {
    "./grammar.json": "./src/grammar.json",
    "./node-types.json": "./src/node-types.json",
    "./parser.c": "./src/parser.c",
    "./wasm": "./grammar.wasm",
    "./queries/highlights.scm": "./queries/graphql/highlights.scm",
    "./queries/formatter.scm": "./queries/graphql/formatter.scm",
    "./headers/parser.h": "./src/tree_sitter/parser.h",
    "./headers/alloc.h": "./src/tree_sitter/alloc.h",
    "./headers/array.h": "./src/tree_sitter/array.h"
  },
  "scripts": {
    "build": "tree-sitter generate grammar.js && pnpm build:wasm",
    "build:wasm": "tree-sitter build --docker --wasm --output grammar.wasm .",
    "clean": "rm -rf src grammar.wasm"
  },
  "devDependencies": {
    "@treant/grammar": "workspace:*",
    "tree-sitter-cli": "^0.25.8"
  },
  "publishConfig": {
    "access": "public"
  }
}
