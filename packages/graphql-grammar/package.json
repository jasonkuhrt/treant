{
  "name": "@treant/graphql-grammar",
  "version": "0.0.0",
  "description": "Tree-sitter grammar for GraphQL",
  "type": "module",
  "author": "Jason Kuhrt",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasonkuhrt/treant.git",
    "directory": "packages/graphql-grammar"
  },
  "treant": {
    "displayName": "GraphQL"
  },
  "files": [
    "src",
    "grammar.wasm"
  ],
  "exports": {
    "./package.json": "./package.json",
    "./grammar.json": "./src/grammar.json",
    "./node-types.json": "./src/node-types.json",
    "./wasm": "./grammar.wasm"
  },
  "scripts": {
    "build": "tree-sitter generate grammar.js && pnpm build:wasm",
    "build:wasm": "tree-sitter build --docker --wasm --output grammar.wasm .",
    "clean": "rm -rf src grammar.wasm"
  },
  "devDependencies": {
    "@treant/grammar": "workspace:*",
    "tree-sitter-cli": "^0.25.8"
  }
}
