{
  "name": "tree-sitter-graphql-grammar-wasm",
  "version": "1.0.1",
  "type": "module",
  "description": "Pre-built WASM binary for tree-sitter GraphQL grammar",
  "author": "Jason Kuhrt",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasonkuhrt/tree-sitter-graphql-grammar-wasm.git"
  },
  "keywords": [
    "tree-sitter",
    "graphql",
    "wasm",
    "grammar",
    "parser"
  ],
  "scripts": {
    "gen": "pnpm run '/^gen:.*/'",
    "pregen:parser": "pnpm build:grammar",
    "gen:parser": "tree-sitter generate --output parser/src grammar-js/grammar.js",
    "postgen:parser": "pnpm gen:grammar-types",
    "gen:grammar-types": "tsx scripts/gen-grammar-types.ts",
    "prebuild:wasm": "pnpm run gen:parser",
    "build:grammar": "tsc --project tsconfig.build.json",
    "build:wasm": "tree-sitter build --docker --wasm --output grammar.wasm parser",
    "build": "pnpm build:wasm",
    "check:types": "tsc --noEmit",
    "format": "dprint fmt",
    "format:check": "dprint check",
    "pretest": "test -f grammar.wasm || pnpm run build",
    "test": "vitest"
  },
  "exports": {
    "./grammar.wasm": "./grammar.wasm"
  },
  "files": [
    "grammar.wasm",
    "README.md"
  ],
  "devDependencies": {
    "@tsconfig/node24": "^24.0.1",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^22.10.5",
    "dprint": "^0.50.1",
    "tree-sitter-cli": "^0.25.8",
    "tsx": "^4.20.3",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4",
    "web-tree-sitter": "^0.25.8"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "tree-sitter-cli"
    ]
  }
}
